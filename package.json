{
  "name": "string-true-oneline",
  "description": "This module transforms a string to a oneline string considering escape sequences: so('test\rnoop\ntest') -> 'noop test'",
  "version": "1.0.0",
  "license": "MIT",
  "main": "build/src/index.js",
  "typings": "build/src/index.d.ts",
  "author": "nskazki@gmail.com",
  "keywords": [
    "string",
    "true",
    "oneline",
    "one",
    "line",
    "render",
    "escape",
    "sequence",
    "character",
    "characters"
  ],
  "scripts": {
    "prepublish": "npm run test",
    "preversion": "npm run test",
    "test": "npm run tslint && npm run cover",
    "test-travis": "npm run test && npm run coveralls",
    "pretest": "npm run build",
    "build": "rm -rf build/* && npm run typings && tsc",
    "npmignore": "npm pack . > /dev/null && tar -tvf *.tgz && rm *.tgz",
    "typings": "typings install",
    "tslint": "tslint $(find src test -name '*.ts')",
    "cover": "npm run cover:setup && npm run cover:check",
    "cover:setup": "istanbul cover node_modules/mocha/bin/_mocha -- build/test/*.test.js",
    "cover:check": "istanbul check-coverage --statements 97",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "mocha": "mocha"
  },
  "dependencies": {
    "string-render": "^1.0.1"
  },
  "devDependencies": {
    "chalk": "^1.1.3",
    "coveralls": "^2.11.9",
    "espower-typescript": "^5.0.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "ts-node": "^0.7.1",
    "tslint": "^3.6.0",
    "typescript": "^1.8.9",
    "typings": "^0.8.1"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nskazki/string-true-oneline.git"
  },
  "bugs": {
    "url": "https://github.com/nskazki/string-true-oneline/issues"
  },
  "homepage": "https://github.com/nskazki/string-true-oneline#readme"
}
